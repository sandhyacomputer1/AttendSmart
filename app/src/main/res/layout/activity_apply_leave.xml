<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:title="Apply Leave"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Leave Type Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#E8EAF6"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leave Type"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp" />

                        <RadioGroup
                            android:id="@+id/rgLeaveType"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rbFullDay"
                                android:text="Full Day"
                                android:checked="true"
                                app:buttonTint="#2196F3"
                                android:textColor="#2C3E50"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="12dp"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rbHalfDay"
                                android:text="Half Day"
                                app:buttonTint="#2196F3"
                                android:textColor="#2C3E50"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="12dp" />
                        </RadioGroup>

                        <!-- Half Day Type -->
                        <RadioGroup
                            android:id="@+id/rgHalfDay"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rbMorning"
                                android:text="Morning"
                                app:buttonTint="#FF9800"
                                android:textColor="#2C3E50"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="12dp"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rbAfternoon"
                                android:text="Afternoon"
                                app:buttonTint="#FF9800"
                                android:textColor="#2C3E50"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="12dp" />
                        </RadioGroup>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Date Range Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#E8EAF6"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Dates"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp" />

                        <!-- From Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#FAFAFA"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/llFromDate"
                            android:layout_marginBottom="12dp"
                            android:padding="16dp"
                            android:backgroundTint="#FAFAFA">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#2196F3"
                                android:layout_marginEnd="14dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="From Date"
                                    android:textSize="12sp"
                                    android:textColor="#7F8C8D" />

                                <TextView
                                    android:id="@+id/tvFromDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Select Date"
                                    android:textSize="15sp"
                                    android:textColor="#2C3E50"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#95A5A6" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginVertical="4dp" />

                        <!-- To Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#FAFAFA"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/llToDate"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#2196F3"
                                android:layout_marginEnd="14dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Date"
                                    android:textSize="12sp"
                                    android:textColor="#7F8C8D" />

                                <TextView
                                    android:id="@+id/tvToDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Select Date"
                                    android:textSize="15sp"
                                    android:textColor="#2C3E50"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#95A5A6" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reason Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#E8EAF6"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leave Reason"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="#B0BEC5"
                            app:boxStrokeWidth="1dp"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/text_grey"
                            app:hintTextColor="@color/text_grey"
                            app:boxBackgroundColor="#FFFFFF"
                            app:counterMaxLength="200"
                            android:hint="Enter reason for leave">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etReason"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:inputType="textMultiLine"
                                android:maxLines="5"
                                android:gravity="top|start"
                                android:textSize="14sp"
                                android:textColor="#2C3E50"
                                android:maxLength="200"
                                android:padding="12dp"
                               />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maximum 200 characters"
                            android:textSize="11sp"
                            android:textColor="#95A5A6"
                            android:gravity="end"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Information Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F5F7FF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#D1D9FF"
                    app:strokeWidth="0.5dp"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/circle_bg_white"
                            app:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leave Balance"
                                android:textSize="13sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLeaveBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available: 5 days"
                                android:textSize="14sp"
                                android:textColor="#2196F3"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#B0BEC5" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Action Panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="20dp">

            <!-- Summary Panel -->
            <LinearLayout
                android:id="@+id/llSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F8F9FF"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_summary"
                    app:tint="#2196F3"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Leave: "
                    android:textSize="13sp"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/tvTotalDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#E0E0E0"
                    android:layout_marginHorizontal="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="13sp"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Review"
                    android:textSize="13sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:background="#FFF3E0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />
            </LinearLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SUBMIT LEAVE REQUEST"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/blue_800"
                app:backgroundTint="#2196F3"
                app:cornerRadius="12dp"
                android:elevation="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â“˜ Your request will be reviewed by HR"
                android:textSize="11sp"
                android:textColor="#95A5A6"
                android:gravity="center"
                android:layout_marginTop="12dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>