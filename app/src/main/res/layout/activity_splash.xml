<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_bg"
    android:fitsSystemWindows="true">

    <!-- Animated Background Circles -->
    <View
        android:id="@+id/circle1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-200dp"
        android:background="@drawable/circle_bg_1"
        android:alpha="0.3" />

    <View
        android:id="@+id/circle2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-150dp"
        android:layout_marginStart="-150dp"
        android:background="@drawable/circle_bg_2"
        android:alpha="0.2" />

    <View
        android:id="@+id/circle3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle_bg_3"
        android:alpha="0.15" />

    <!-- Main Content Container with 3D Effect -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <!-- Center Content -->
        <LinearLayout
            android:id="@+id/centerContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp">

            <!-- Logo Container with Card Effect -->
            <RelativeLayout
                android:id="@+id/logoContainer"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/logo_card_bg"
                android:elevation="16dp"
                android:translationZ="8dp">

                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/salarylogo"
                    android:scaleType="fitCenter" />

                <!-- Shine Effect Overlay -->
                <View
                    android:id="@+id/shine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shine_gradient"
                    android:alpha="0.4" />
            </RelativeLayout>

            <!-- App Name with Shadow -->
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="S Salary"
                android:textColor="#0D0D0D"
                android:textSize="32sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:letterSpacing="0.05" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Smart Attendance Solution"
                android:textColor="#0D0D0D"
                android:textSize="14sp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.1" />

            <!-- âœ… DOTS LOADING ANIMATION (Replaced ProgressBar) -->
            <LinearLayout
                android:id="@+id/dot_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Dot 1 -->
                <View
                    android:id="@+id/dot1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/dot_animation_1"
                    android:scaleX="0.0"
                    android:scaleY="0.0" />

                <!-- Dot 2 -->
                <View
                    android:id="@+id/dot2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/dot_animation_2"
                    android:scaleX="0.0"
                    android:scaleY="0.0" />

                <!-- Dot 3 -->
                <View
                    android:id="@+id/dot3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/dot_animation_3"
                    android:scaleX="0.0"
                    android:scaleY="0.0" />

            </LinearLayout>

            <!-- Loading Text -->
            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loading..."
                android:textColor="#0F0E0E"
                android:textSize="13sp"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Bottom Branding with Elevated Card -->
    <LinearLayout
        android:id="@+id/bottomBranding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/bottom_card_bg"
        android:elevation="8dp">

        <!-- Company Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandhya Softtech Pvt Ltd"
            android:textColor="#090909"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05" />

        <!-- Divider Line -->
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#3A3939"
            android:alpha="0.5" />

        <!-- Made in India -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with "
                android:textColor="#0D0D0D"
                android:textSize="13sp"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" in India "
                android:textColor="#0D0D0D"
                android:textSize="13sp"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‡®ðŸ‡³"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Version 1.0.0"
            android:textColor="#0B0B0B"
            android:textSize="11sp"
            android:alpha="0.7"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</RelativeLayout>
