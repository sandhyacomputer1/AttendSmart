<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Registration.AdminDashboardActivity">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Bar with CollapsingToolbar for modern look -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/blue_800"
                app:expandedTitleMarginBottom="28dp"
                app:expandedTitleMarginStart="20dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <!-- Gradient Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_blue_header"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <!-- Custom Toolbar Area -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="10dp">

                        <!-- Top Action Bar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnMenu"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="12dp"
                                android:src="@drawable/ic_menu"
                                app:tint="@android:color/white" />

                            <TextView
                                android:id="@+id/tvWelcomeGreeting"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginStart="10dp"
                                android:textColor="@android:color/white"
                                android:textSize="14dp" />
                            <TextView
                                android:id="@+id/tvToolbarTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@android:color/white"
                                android:textSize="0dp" />
                            <!-- Notifications Button -->
                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/btnNotifications"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:padding="12dp"
                                    android:src="@drawable/ic_reports"
                                    app:tint="@android:color/white" />

                                <!-- Notification Badge -->
                                <TextView
                                    android:id="@+id/tvNotificationBadge"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end|top"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:textSize="0sp"
                                    android:visibility="gone" />
                            </FrameLayout>
                            <!-- Settings Button -->
                            <ImageView
                                android:id="@+id/btnSettings"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/settings"
                                android:padding="12dp"
                                android:src="@drawable/ic_settings"
                                app:tint="@android:color/white" />


                        </LinearLayout>

                        <!-- Welcome Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/tvCompanyNameLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="Your Company"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:textSize="23sp" />

                            <!-- Date and Time Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/white"
                                    />

                                <TextView
                                    android:id="@+id/tvCurrentDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/white"

                                    android:text="Monday, Feb 02, 2026"
                                    android:textSize="13sp" />

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="4dp"
                                    android:backgroundTint="@color/black"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    />

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_time"
                                    app:tint="@color/white"

                                    />

                                <TextView
                                    android:id="@+id/tvCurrentTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/white"
                                    android:text="09:30 AM"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Quick Action Chips -->
                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="15dp"
                            app:chipSpacing="8dp"
                            app:singleLine="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAddEmployee"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Employee"
                                android:textColor="@color/blue_800"
                                app:chipBackgroundColor="@android:color/white"
                                app:chipStrokeColor="@android:color/transparent"
                                app:chipStrokeWidth="0dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipViewReports"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reports"
                                android:textColor="@color/blue_800"
                                app:chipStrokeWidth="1dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipQuickActions"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More"
                                android:textColor="@color/blue_800"
                                app:chipIconTint="@android:color/white"
                                app:chipStrokeWidth="1dp" />
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>
                </LinearLayout>

                <!-- Collapsed Toolbar -->
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_menu"
                    app:title="" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="90dp">

                <!-- Overview Stats Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:text="Today's Overview"
                    android:textColor="@color/grey_900"
                    android:textSize="18sp" />

                <!-- Stats Grid -->
                <!-- Stats Grid - Compact Version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Total Employees Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTotalEmployees"
                            android:layout_width="0dp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:strokeColor="@color/grey_200"
                            app:strokeWidth="0.5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F1F3FB"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <!-- Donut Chart Container -->
                                <FrameLayout
                                    android:id="@+id/donutContainerTotal"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_height="50dp">

                                    <com.github.mikephil.charting.charts.PieChart
                                        android:id="@+id/donutTotal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </FrameLayout>

                                <!-- Text Content -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"

                                    android:layout_marginStart="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvTotalEmployees"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/grey_900"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Total"
                                        android:textColor="@color/grey_600"
                                        android:textSize="11sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Present Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardPresent"
                            android:layout_width="0dp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:strokeColor="@color/grey_200"
                            app:strokeWidth="0.5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F0FBF1"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <!-- Donut Chart Container -->
                                <FrameLayout
                                    android:id="@+id/donutContainerPresent"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"

                                    android:layout_height="50dp">

                                    <com.github.mikephil.charting.charts.PieChart
                                        android:id="@+id/donutPresent"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </FrameLayout>

                                <!-- Text Content -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPresent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:gravity="center"
                                        android:textColor="@color/grey_900"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Present"
                                        android:textColor="@color/grey_600"
                                        android:textSize="11sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Absent Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAbsent"
                            android:layout_width="0dp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:strokeColor="@color/grey_200"
                            app:strokeWidth="0.5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FDF2F2"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <!-- Donut Chart Container -->
                                <FrameLayout
                                    android:id="@+id/donutContainerAbsent"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"

                                    android:layout_height="50dp">

                                    <com.github.mikephil.charting.charts.PieChart
                                        android:id="@+id/donutAbsent"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </FrameLayout>

                                <!-- Text Content -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center"

                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvAbsent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/grey_900"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Absent"
                                        android:textColor="@color/grey_600"
                                        android:textSize="11sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Late Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardLate"
                            android:layout_width="0dp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:strokeColor="@color/grey_200"
                            app:strokeWidth="0.5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFFEF7"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <!-- Donut Chart Container -->
                                <FrameLayout
                                    android:id="@+id/donutContainerLate"
                                    android:layout_width="50dp"
                                    android:layout_marginStart="10dp"

                                    android:layout_height="50dp">

                                    <com.github.mikephil.charting.charts.PieChart
                                        android:id="@+id/donutLate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </FrameLayout>

                                <!-- Text Content -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_marginStart="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvLate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/grey_900"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="Late"
                                        android:textColor="@color/grey_600"
                                        android:textSize="11sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
                <!-- Performance Metrics Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    android:text="Performance Metrics"
                    android:textColor="@color/grey_900"
                    android:textSize="18sp" />

                <!-- Metrics Cards -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <!-- Avg Check-In Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/grey_100"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">


                                <TextView
                                    android:id="@+id/tvAvgCheckIn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="--:--"
                                    android:textColor="@color/grey_900"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Avg Check-In"
                                    android:textColor="@color/grey_600"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Total Hours Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/grey_100"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">



                                <TextView
                                    android:id="@+id/tvTotalHours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="0h"
                                    android:textColor="@color/grey_900"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Total Hours"
                                    android:textColor="@color/grey_600"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- On-Time % Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/grey_100"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">



                                <TextView
                                    android:id="@+id/tvOnTimePercent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="0%"
                                    android:textColor="@color/grey_900"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="On-Time Rate"
                                    android:textColor="@color/grey_600"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Weekly Attendance Chart -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:text="Weekly Attendance"
                    android:textColor="@color/grey_900"
                    android:textSize="18sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/grey_100"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/weeklyChart"
                            android:layout_width="match_parent"
                            android:layout_height="240dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Employee List Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Employees"
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvViewAllEmployees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="@color/blue_600"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Search Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/grey_50"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search employees..."
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintTextColor="@color/grey_500"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="@color/grey_500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_regular"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/grey_900"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Employee RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEmployees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_employee" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabAddEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:text="Add Employee"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/blue_600"
            app:elevation="6dp"
            app:icon="@drawable/ic_add"
            app:iconTint="@android:color/white"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/admin_nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>