<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_header"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Attendance Details"
        app:titleTextColor="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date & Shift Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="March 15, 2026"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/tvDayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvShiftTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift: 9:00 AM - 6:00 PM"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:layout_marginTop="8dp"/>

                    <View
                        android:id="@+id/viewStatusBar"
                        android:layout_width="80dp"
                        android:layout_height="4dp"
                        android:background="#4CAF50"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/tvStatusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRESENT"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Check-In Details with Photo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-In"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:drawableStart="@drawable/ic_login"
                        android:drawablePadding="8dp"
                        android:drawableTint="#4CAF50"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="12dp"/>

                    <!-- Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Time"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvCheckInTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:30 AM"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>
                    </LinearLayout>

                    <!-- Location Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvCheckInLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Office Building, Mumbai"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Check-in Photo -->
                    <ImageView
                        android:id="@+id/ivCheckInPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Check-in photo"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Check-Out Details with Photo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-Out"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawablePadding="8dp"
                        android:drawableTint="#F44336"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="12dp"/>

                    <!-- Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Time"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvCheckOutTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06:30 PM"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>
                    </LinearLayout>

                    <!-- Location Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="14sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvCheckOutLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Office Building, Mumbai"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Check-out Photo -->
                    <ImageView
                        android:id="@+id/ivCheckOutPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Check-out photo"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Working Hours -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWorkingHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWorkingHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9h 0m"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Working Hours"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Info (Late, etc.) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/tvAdditionalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Late arrival: 30 minutes"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
