<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- NAVIGATION CONTROLS - TOP -->
        <LinearLayout
            android:id="@+id/navigationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <!-- PAGE INDICATOR -->
            <TextView
                android:id="@+id/tvPageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Jan 2026 (1/5)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/stats_bg_white"
                android:layout_marginBottom="10dp"/>

            <!-- NAVIGATION BUTTONS ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrevDate"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="â† Older"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:strokeColor="#FF5722"
                    app:strokeWidth="1dp"
                    android:textColor="#FF5722"
                    android:layout_marginEnd="6dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDatePicker"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:text="ðŸ“…"
                    android:textSize="18sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#FF5722"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:layout_marginHorizontal="6dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextDate"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Newer â†’"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:strokeColor="#FF5722"
                    app:strokeWidth="1dp"
                    android:textColor="#FF5722"
                    android:layout_marginStart="6dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- LOADING INDICATOR -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:indeterminateTint="#FF5722"
            android:visibility="gone"/>

        <!-- VIEWPAGER2 FOR SWIPE -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingHorizontal="12dp"
            android:clipToPadding="false"/>

        <!-- EMPTY STATE -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="ðŸ“"
                android:textSize="70sp"
                android:gravity="center"
                android:background="@drawable/stats_bg_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Work Records"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No work records found.\nStart by adding today's work!"
                android:textSize="13sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- FLOATING ACTION BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="#FF5722"
        app:tint="@android:color/white"
        android:contentDescription="Add today's work"
        app:elevation="6dp"
        app:borderWidth="0dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>