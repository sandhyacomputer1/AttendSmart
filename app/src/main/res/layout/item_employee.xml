<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Profile Photo -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />
        </androidx.cardview.widget.CardView>

        <!-- Details Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Name and Status Badge Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvEmpName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="John Doe"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Status Badge -->
                <LinearLayout
                    android:id="@+id/statusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/stats_bg_white">

                    <ImageView
                        android:id="@+id/ivStatus"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato_bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Contact and Department Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvEmpMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999999999"
                    android:textSize="13sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="?android:attr/textColorSecondary" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tvEmpDepartment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IT Department"
                    android:textSize="13sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Check-in/out Time -->
            <TextView
                android:id="@+id/tvCheckInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="In: 10:30 AM â€¢ Out: 6:30 PM"
                android:textSize="12sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="?android:attr/textColorTertiary" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>