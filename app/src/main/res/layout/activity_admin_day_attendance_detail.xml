<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F7FA">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Attendance Details"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#FFFFFF"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Date & Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="14dp">

                    <!-- Date Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#1976D2"
                            android:contentDescription="Date"/>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="January 3, 2026"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginStart="8dp"/>

                        <!-- Shift Timing Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_status_badge"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_time"
                                app:tint="#FF9800"
                                android:contentDescription="Shift"/>

                            <TextView
                                android:id="@+id/tvShiftTiming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading shift..."
                                android:textSize="11sp"
                                android:textColor="#FF9800"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Total Hours Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_status_badge"
                        android:padding="10dp">

                        <TextView
                            android:text="Total Working Hours"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvTotalHours"
                            android:text="0h 0m"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Status Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Header -->
                    <TextView
                        android:text="STATUS"
                        android:textSize="12sp"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Attendance Status Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStatusPresent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="42dp"
                            android:text="Present"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1.5dp"
                            android:textColor="#757575"
                            android:layout_marginEnd="5dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStatusHalfDay"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="42dp"
                            android:text="Half Day"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1.5dp"
                            android:textColor="#757575"
                            android:layout_marginHorizontal="2.5dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStatusAbsent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="42dp"
                            android:text="Absent"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1.5dp"
                            android:textColor="#757575"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:text=" LATE STATUS"
                        android:textSize="12sp"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLateOnTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="42dp"
                            android:text="On Time"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1.5dp"
                            android:textColor="#757575"
                            android:layout_marginEnd="5dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLateLate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="42dp"
                            android:text="Late"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1.5dp"
                            android:textColor="#757575"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Check-In/Out Combined Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Check-In/Out Times at Top -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp">

                        <!-- Check-In Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:text="CHECK-IN"
                                android:textSize="11sp"
                                android:textColor="#43A047"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                                app:boxCornerRadiusTopStart="8dp"
                                app:boxCornerRadiusTopEnd="8dp"
                                app:boxCornerRadiusBottomStart="8dp"
                                app:boxCornerRadiusBottomEnd="8dp"
                                app:startIconDrawable="@drawable/ic_time"
                                app:startIconTint="#43A047">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etCheckIn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Check-in"
                                    android:textSize="14sp"
                                    android:focusable="false"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Check-Out Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:text="CHECK-OUT"
                                android:textSize="11sp"
                                android:textColor="#E53935"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                                app:boxCornerRadiusTopStart="8dp"
                                app:boxCornerRadiusTopEnd="8dp"
                                app:boxCornerRadiusBottomStart="8dp"
                                app:boxCornerRadiusBottomEnd="8dp"
                                app:startIconDrawable="@drawable/ic_time"
                                app:startIconTint="#E53935">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etCheckOut"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Check-out"
                                    android:textSize="14sp"
                                    android:focusable="false"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Photos & Locations in Middle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Check-In Photo & Location -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="6dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardCheckInPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp"
                                app:strokeWidth="0dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:id="@+id/ivCheckInPhoto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="#F5F5F5"
                                    android:contentDescription="Check-in photo"/>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="#757575"
                                    android:contentDescription="Location"/>

                                <TextView
                                    android:text="Location"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:textStyle="bold"
                                    android:layout_marginStart="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvCheckInAddress"
                                android:text="No location recorded"
                                android:textSize="11sp"
                                android:textColor="#212121"
                                android:lineHeight="15dp"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- Check-Out Photo & Location -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="6dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardCheckOutPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp"
                                app:strokeWidth="0dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:id="@+id/ivCheckOutPhoto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="#F5F5F5"
                                    android:contentDescription="Check-out photo"/>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="#757575"
                                    android:contentDescription="Location"/>

                                <TextView
                                    android:text="Location"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:textStyle="bold"
                                    android:layout_marginStart="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvCheckOutAddress"
                                android:text="No location recorded"
                                android:textSize="11sp"
                                android:textColor="#212121"
                                android:lineHeight="15dp"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="bottom"
                android:paddingTop="4dp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Save Changes"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:iconGravity="textStart"
                    android:backgroundTint="#1976D2"
                    app:elevation="2dp"
                    android:layout_marginEnd="5dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Delete"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="10dp"
                    app:iconGravity="textStart"
                    app:strokeColor="#E53935"
                    app:strokeWidth="1dp"
                    android:textColor="#E53935"
                    app:iconTint="#E53935"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>