<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Compact Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_header"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Employee Documents"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium" />

    <!-- Compact Employee Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Employee Profile Header - Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Profile Image -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/background">

                    <ImageView
                        android:id="@+id/ivEmployeeProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person"
                        />
                </com.google.android.material.card.MaterialCardView>

                <!-- Employee Name & ID - Vertical -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvEmployeeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/tvEmployeeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMP001"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="1dp" />
                </LinearLayout>

                <!-- Total Documents - Vertical (Right Side) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTotalDocs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOCS"
                        android:textSize="9sp"
                        android:textColor="@color/text_secondary"
                        android:letterSpacing="0.1"
                        android:layout_marginTop="-2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Thin Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:alpha="0.15"
                android:layout_marginVertical="5dp" />

            <!-- Contact & Department Info - Horizontal Grid (2 Columns) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
               >

                <!-- Left Column - Mobile -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="6dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="68dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MOBILE"
                            android:textSize="9sp"
                            android:textColor="@color/text_secondary"
                            android:textAllCaps="true"
                            android:letterSpacing="0.08" />

                        <TextView
                            android:id="@+id/tvEmployeeMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 9876543210"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="1dp"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:alpha="0.2"
                    android:layout_marginHorizontal="6dp" />

                <!-- Right Column - Department -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEPARTMENT"
                            android:textSize="9sp"
                            android:textColor="@color/text_secondary"
                            android:textAllCaps="true"
                            android:letterSpacing="0.08" />

                        <TextView
                            android:id="@+id/tvDepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IT Department"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="1dp"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Document Categories - Compact Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Stats Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOC TYPES:"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:paddingEnd="8dp"
                        android:gravity="center_vertical" />

                    <!-- Document Stats -->
                    <TextView
                        android:id="@+id/tvDocumentStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhaar: 1 • PAN: 1 • Education: 2"
                        android:textSize="11sp"
                        android:textColor="?attr/colorPrimary"
                        android:alpha="0.9" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Compact Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingBottom="6dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequestDocuments"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Request"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_send"
            app:iconSize="15dp"
            app:iconPadding="3dp"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Export"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_download"
            app:iconSize="15dp"
            app:iconPadding="3dp"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </LinearLayout>

    <!-- Documents RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDocuments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:paddingHorizontal="4dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_document_admin" />

    <!-- Compact Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/document"
            android:alpha="0.5"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Documents Yet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This employee hasn't uploaded any documents"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:alpha="0.7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:layout_marginTop="18dp"
            app:icon="@drawable/ic_send"
            app:iconSize="16dp"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="?attr/colorPrimary" />

</LinearLayout>