<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:navigationIconTint="@android:color/white"
            app:titleTextColor="@android:color/white">

            <!-- History Icon -->
            <ImageView
                android:id="@+id/btnHistory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_history"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View All Reports"
                app:tint="@android:color/white"/>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:paddingBottom="70dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- HEADER CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#E3F2FD">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Daily Work Report"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fill your daily status in 3 simple steps"
                        android:textSize="12sp"
                        android:textColor="#616161"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- COMPLETED WORK CARD -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:layout_marginTop="20dp"

                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="âœ…"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_green"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completed Work"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#212121"/>

                            <TextView
                                android:id="@+id/tvCompletedStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Added"
                                android:textSize="11sp"
                                android:textColor="#F44336"
                                android:layout_marginTop="1dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€º"
                            android:textSize="26sp"
                            android:textColor="#BDBDBD"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCompletedPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap to add details"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:paddingStart="46dp"
                        android:paddingEnd="0dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ONGOING WORK CARD -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOngoing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="ðŸ”„"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_orange"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ongoing Work"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#212121"/>

                            <TextView
                                android:id="@+id/tvOngoingStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Added"
                                android:textSize="11sp"
                                android:textColor="#F44336"
                                android:layout_marginTop="1dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€º"
                            android:textSize="26sp"
                            android:textColor="#BDBDBD"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOngoingPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap to add details"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:paddingStart="46dp"
                        android:paddingEnd="0dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- TOMORROW WORK CARD -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="ðŸ“…"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_blue"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tomorrow's Plan"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#212121"/>

                            <TextView
                                android:id="@+id/tvTomorrowStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Added"
                                android:textSize="11sp"
                                android:textColor="#F44336"
                                android:layout_marginTop="1dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€º"
                            android:textSize="26sp"
                            android:textColor="#BDBDBD"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTomorrowPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap to add details"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:paddingStart="46dp"
                        android:paddingEnd="0dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FIXED SUBMIT BUTTON AT BOTTOM -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/layoutSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text=" Submit Daily Report"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingVertical="14dp"
        android:layout_margin="10dp"
        app:cornerRadius="10dp"
        app:backgroundTint="#FF5722"
        android:elevation="4dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>