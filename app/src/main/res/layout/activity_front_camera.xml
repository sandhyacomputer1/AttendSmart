<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    android:keepScreenOn="true">

    <!-- Header with Gradient -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/gradient_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Verification"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Position your face - Auto capture enabled"
            android:textColor="#FFFFFF"
            android:alpha="0.95"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Face Detection Status -->
    <TextView
        android:id="@+id/tvFaceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Position your face"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:padding="12dp"
        android:elevation="4dp"
        android:visibility="visible" />

    <!-- Camera Preview Container -->
    <RelativeLayout
        android:id="@+id/cameraContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_grid_overlay"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:elevation="2dp">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <!-- White Flash Overlay -->
        <View
            android:id="@+id/flashOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:elevation="10dp" />

        <!-- Focus Indicator -->
        <ImageView
            android:id="@+id/focusIndicator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_focus"
            android:visibility="invisible"
            app:tint="#4CAF50"
            android:elevation="11dp" />

        <!-- Success Checkmark -->
        <ImageView
            android:id="@+id/successCheckmark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="#4CAF50"
            android:elevation="12dp" />

        <!-- Countdown Timer -->
        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="72sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:visibility="gone"
            android:elevation="13dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="8" />

    </RelativeLayout>

    <!-- Flash Toggle Icon -->
    <ImageView
        android:id="@+id/flashIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignTop="@id/cameraContainer"
        android:layout_alignEnd="@id/cameraContainer"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/ic_flash_off"
        android:background="@drawable/circle_bg_white"
        android:padding="10dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="14dp"
        app:tint="#FD511B"
        android:contentDescription="Toggle flash" />

    <!-- Auto Capture Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/accent_bar"
        android:elevation="4dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_auto_capture"
            app:tint="#FFFFFF"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Capture ON"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Loading Overlay -->
    <RelativeLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6FFFFFF"
        android:visibility="gone"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_dialog_bg"
            android:padding="30dp"
            android:gravity="center"
            android:elevation="21dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminateTint="#4CAF50"
                style="?android:attr/progressBarStyle" />

            <TextView
                android:id="@+id/txtLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Processing..."
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Please wait a moment"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:id="@+id/dot1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/circle_bg_green" />

                <View
                    android:id="@+id/dot2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/circle_bg_green" />

                <View
                    android:id="@+id/dot3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/circle_bg_green" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check In - Auto Capture"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:backgroundTint="#ED1818"
                android:textColor="#F4F1F1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCapture"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:text="ðŸ“¸ Capture Now"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_info"
                app:tint="#4CAF50"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Face detection active â€¢ Photo will capture automatically"
                android:textColor="#666666"
                android:textSize="11sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>