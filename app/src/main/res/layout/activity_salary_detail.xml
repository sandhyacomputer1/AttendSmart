<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#F5F6FA">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="8dp"
                app:tint="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Salary Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="@color/red"
                android:paddingHorizontal="16dp"
                android:text="Edit"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Employee Info Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Employee Information"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvEmployeeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Name"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvEmployeeMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Attendance Summary Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Attendance Summary"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <!-- Present Days -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Present Days"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etPresentDays"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:hint="0"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Half Days -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Half Days"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etHalfDays"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:hint="0"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Absent Days -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Absent Days"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etAbsentDays"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:hint="0"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Late Days -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Late Days"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etLateDays"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:hint="0"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Salary Details Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Salary Calculation"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:strokeColor="#1976D2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <!-- Per Day Salary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Per Day Salary"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etPerDaySalary"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:hint="₹0"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:textAlignment="textEnd"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Gross Salary (Auto-calculated) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gross Salary"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etGrossSalary"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:hint="₹0"
                            android:inputType="none"
                            android:textSize="14sp"
                            android:textAlignment="textEnd"
                            android:enabled="false"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"
                            android:textColor="#2196F3"/>
                    </LinearLayout>

                    <!-- Deductions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Deductions"
                            android:textSize="14sp"
                            android:textColor="#424242"/>

                        <EditText
                            android:id="@+id/etTotalDeductions"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:hint="₹0"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:textAlignment="textEnd"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="12dp"/>

                    <!-- Net Salary (Auto-calculated) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Net Salary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1B5E20"/>

                        <EditText
                            android:id="@+id/etNetSalary"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:hint="₹0"
                            android:inputType="none"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textAlignment="textEnd"
                            android:enabled="false"
                            android:background="@drawable/edit_text_background"
                            android:padding="8dp"
                            android:textColor="#1B5E20"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Save Changes"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="10dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGeneratePdf"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Download PDF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#FF5722"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_download"
            app:iconGravity="start"/>

    </LinearLayout>

</LinearLayout>