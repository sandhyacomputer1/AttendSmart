<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with Orange Background -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FF5722"
            android:padding="10dp">

            <!-- Current Time -->
            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dec 29, 2025 2:30 PM"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, John!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Company & Role Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/stats_bg_white"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company: sss@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Role: Employee (Android)"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvShift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shift: 9:00 AM - 6:00 PM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722" />
            </LinearLayout>

            <!-- Location Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/stats_bg_white"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Getting location..."
                    android:textSize="12sp"
                    android:textColor="#616161"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="11dp">

            <!-- Today's Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Today's Status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvTodayStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Absent"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Punch In/Out Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° Attendance Actions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="12dp" />

            <!-- Punch In Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="ðŸ“¸ Punch In"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="#27AB2D"
                    app:cornerRadius="12dp"
                    app:iconGravity="textStart"
                    app:iconSize="28dp"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- Punch Out Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckOut"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="ðŸ“¸ Punch Out"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="#F21313"
                    app:cornerRadius="12dp"
                    app:iconGravity="textStart"
                    app:iconSize="28dp"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- Additional Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ More Options"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="12dp" />

            <!-- Attendance Report Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAttendanceReport"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“Š View Attendance Report"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#FF5722"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="12dp"
                app:strokeColor="#FF5722"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸšª Logout"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#F44336"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="12dp"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>