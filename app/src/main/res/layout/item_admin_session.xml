<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Session Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvSessionNumber"
                android:text="Session 1"
                android:textSize="12sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSessionDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_bg_white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="0h 0m"
                android:textColor="#43A047"
                android:textSize="11sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoveSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remove"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="#E53935"
                android:minWidth="0dp"
                android:paddingHorizontal="4dp"/>
        </LinearLayout>

        <!-- Times Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Check-In -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:text="CHECK-IN"
                    android:textSize="9sp"
                    android:textColor="#43A047"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                    app:boxCornerRadiusTopStart="6dp"
                    app:boxCornerRadiusTopEnd="6dp"
                    app:boxCornerRadiusBottomStart="6dp"
                    app:boxCornerRadiusBottomEnd="6dp"
                    app:startIconDrawable="@drawable/ic_time"
                    app:startIconTint="#43A047">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCheckIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:textSize="12sp"
                        android:focusable="false"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Check-Out -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:text="CHECK-OUT"
                    android:textSize="9sp"
                    android:textColor="#E53935"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                    app:boxCornerRadiusTopStart="6dp"
                    app:boxCornerRadiusTopEnd="6dp"
                    app:boxCornerRadiusBottomStart="6dp"
                    app:boxCornerRadiusBottomEnd="6dp"
                    app:startIconDrawable="@drawable/ic_time"
                    app:startIconTint="#E53935">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCheckOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:textSize="12sp"
                        android:focusable="false"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Photos Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <!-- Check-In Photo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCheckInPhoto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0.5dp"
                android:background="@color/white"
                app:strokeWidth="0.5dp"
                app:strokeColor="#E0E0E0"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginEnd="3dp">

                <ImageView
                    android:id="@+id/ivCheckInPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#F5F5F5"
                    android:contentDescription="Check-in photo"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Check-Out Photo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCheckOutPhoto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0.5dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#E0E0E0"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="3dp">

                <ImageView
                    android:id="@+id/ivCheckOutPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#F5F5F5"
                    android:contentDescription="Check-out photo"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Locations Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Check-In Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_location"
                        app:tint="#757575"
                        android:contentDescription="Location"/>

                    <TextView
                        android:text="Location"
                        android:textSize="8sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckInAddress"
                    android:text="No location"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Check-Out Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_location"
                        app:tint="#757575"
                        android:contentDescription="Location"/>

                    <TextView
                        android:text="Location"
                        android:textSize="8sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckOutAddress"
                    android:text="No location"
                    android:textSize="9sp"
                    android:textColor="#212121"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>