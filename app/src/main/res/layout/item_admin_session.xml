<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Session Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvSessionNumber"
                android:text="Session 1"
                android:textSize="13sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoveSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textSize="10sp"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="#E53935"
                android:paddingHorizontal="8dp"
                android:minWidth="0dp"/>
        </LinearLayout>

        <!-- Check-In/Out Times -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Check-In Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <TextView
                    android:text="CHECK-IN"
                    android:textSize="10sp"
                    android:textColor="#43A047"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:startIconDrawable="@drawable/ic_time"
                    app:startIconTint="#43A047">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCheckIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Check-in"
                        android:textSize="13sp"
                        android:focusable="false"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Check-Out Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="6dp">

                <TextView
                    android:text="CHECK-OUT"
                    android:textSize="10sp"
                    android:textColor="#E53935"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:startIconDrawable="@drawable/ic_time"
                    app:startIconTint="#E53935">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCheckOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Check-out"
                        android:textSize="13sp"
                        android:focusable="false"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Session Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:background="@drawable/stats_bg_white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_time"
                app:tint="#1976D2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Session Duration"
                android:textSize="11sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/tvSessionDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h 0m"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>
        </LinearLayout>

        <!-- Photos & Locations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Check-In Photo & Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCheckInPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:id="@+id/ivCheckInPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:contentDescription="Check-in photo"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_location"
                        app:tint="#757575"
                        android:contentDescription="Location"/>

                    <TextView
                        android:text="Location"
                        android:textSize="9sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:layout_marginStart="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckInAddress"
                    android:text="No location"
                    android:textSize="10sp"
                    android:textColor="#212121"
                    android:lineHeight="13dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Check-Out Photo & Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="6dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCheckOutPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:id="@+id/ivCheckOutPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:contentDescription="Check-out photo"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_location"
                        app:tint="#757575"
                        android:contentDescription="Location"/>

                    <TextView
                        android:text="Location"
                        android:textSize="9sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:layout_marginStart="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckOutAddress"
                    android:text="No location"
                    android:textSize="10sp"
                    android:textColor="#212121"
                    android:lineHeight="13dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>