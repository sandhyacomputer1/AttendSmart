<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Document Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Document Icon/Thumbnail -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/background">

                <ImageView
                    android:id="@+id/ivDocIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:src="@drawable/ic_description"
                     />
            </androidx.cardview.widget.CardView>

            <!-- Document Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <!-- Document Name with Verified Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDocName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aadhaar Card"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Verified Badge -->
                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_verified"
                        android:visibility="gone"
                        app:tint="@color/green"
                        android:contentDescription="Verified" />
                </LinearLayout>

                <!-- Document Type Badge -->
                <TextView
                    android:id="@+id/tvDocType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identity Proof"
                    android:textSize="10sp"
                    android:layout_margin="5dp"
android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_doc_type_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_marginTop="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <!-- Upload Date & Size -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvUploadDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12 Jan 2025"
                        android:textSize="11sp"
                        android:layout_margin="5dp"

                        android:textColor="@color/text_secondary"
                        android:drawablePadding="4dp"
                        app:drawableTint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvFileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5 MB"
                        android:layout_margin="5dp"

                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:drawableStart="@drawable/ic_file_size"
                        android:drawablePadding="4dp"
                        app:drawableTint="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Verification Status Section (if verified) -->
        <LinearLayout
            android:id="@+id/verificationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_verified_section"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_verified"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/tvVerificationInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Verified by Admin on 15 Jan 2025"
                android:textSize="10sp"
                android:textColor="@color/green"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:alpha="0.2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="View"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:paddingHorizontal="14dp"
                app:icon="@drawable/ic_view_salary"
                app:iconSize="14dp"
                app:iconPadding="4dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:strokeWidth="1dp"
                android:layout_marginEnd="6dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:paddingHorizontal="14dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="14dp"
                app:iconPadding="4dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/red"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>