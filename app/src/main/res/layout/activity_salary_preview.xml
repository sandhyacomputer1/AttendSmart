<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Professional Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/gradient_header"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:title="Edit Salary"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Summary Section -->
            <!-- Summary Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Summary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp"/>

                    <!-- Month & Employee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Month:"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvMonth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MM-YYYY"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Employee:"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvEmployee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="9999999999"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <!-- Attendance Quick View -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Present:"
                            android:textColor="#757575"/>

                        <EditText
                            android:id="@+id/tvPresentDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:background="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Leaves:"
                            android:textColor="#757575"/>

                        <EditText
                            android:id="@+id/tvLeaves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="#2196F3"
                            android:textStyle="bold"
                            android:background="@null"/>

                    </LinearLayout>

                    <!-- Add this after the Leaves TextView -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Half Days:"
                            android:textColor="#757575"/>

                        <EditText
                            android:id="@+id/tvHalfDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#FF9800"
                            android:textStyle="bold"
                            android:background="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Absent:"
                            android:textColor="#757575"/>

                        <EditText
                            android:id="@+id/tvAbsentDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:background="@null"/>

                    </LinearLayout>

                </LinearLayout> <!-- Closing tag of inner LinearLayout -->
            </com.google.android.material.card.MaterialCardView>
            <!-- Current Salary Display -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"

                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Salary Breakdown"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp"/>

                    <!-- Gross Salary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gross Salary"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvBasicSalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="#212121"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- PF Deduction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PF Deduction"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvPfAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="#F44336"/>
                    </LinearLayout>

                    <!-- ESI Deduction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ESI Deduction"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvEsiAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="#F44336"/>
                    </LinearLayout>

                    <!-- Other Deduction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Other Deduction"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tvOtherDeductions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="#F44336"/>
                    </LinearLayout>

                    <!-- Total Deduction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Deduction"
                            android:textColor="#757575"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvTotalDeduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="#F44336"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp"/>

                    <!-- Net Salary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Net Salary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:id="@+id/tvNetSalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Manual Adjustments Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdjustments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manual Adjustments"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp"/>

                    <!-- Gross Salary -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gross Salary"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etManualBasic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Enter gross salary"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <!-- PF Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PF Amount"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etManualPf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Enter PF amount"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <!-- ESI Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESI Amount"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etManualEsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Enter ESI amount"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <!-- Other Deduction -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Deduction"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etManualOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Enter other deduction"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <!-- Net Salary (Editable) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Net Salary"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etManualNetSalary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="Enter net salary"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes (Optional)"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etNotes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:hint="Enter any notes about adjustments..."
                        android:padding="12dp"
                        android:gravity="top"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="CANCEL"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:strokeColor="#757575"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue_800"
                    android:text="SAVE SALARY"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>