<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Vertical lines -->
    <item>
        <shape android:shape="line">
            <stroke
                android:width="0.5dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>

    <item android:left="33dp">
        <shape android:shape="line">
            <stroke
                android:width="0.5dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>

    <item android:left="66dp">
        <shape android:shape="line">
            <stroke
                android:width="0.5dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>

    <!-- Horizontal lines -->
    <item>
        <shape android:shape="line">
            <stroke
                android:width="0.5dp"
                android:color="#40FFFFFF" />
            <size android:height="1dp"/>
        </shape>
    </item>

    <item android:top="33dp">
        <shape android:shape="line">
            <stroke
                android:width="0.5dp"
                android:color="#40FFFFFF" />
            <size android:height="1dp"/>
        </shape>
    </item>

    <item android:top="66dp">
        <shape android:shape="line">
            <stroke
                android:width="0.5dp"
                android:color="#40FFFFFF" />
            <size android:height="1dp"/>
        </shape>
    </item>

    <!-- Center crosshair -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000"/>
            <stroke
                android:width="1dp"
                android:color="#80FFFFFF"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>

</layer-list>